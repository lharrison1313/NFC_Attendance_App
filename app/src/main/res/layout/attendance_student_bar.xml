<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:padding="5dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/student_info_container"
        >
        <TextView
            android:id="@+id/studentNameAttendance"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginVertical="5dp"
            />

        <TextView
            android:id="@+id/studentIdAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="20dp"
            android:layout_below="@+id/studentNameAttendance"
            android:layout_marginVertical="5dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Present Absent Tardy Excused"
        android:layout_above="@id/radio_group"
        android:layout_toRightOf="@id/student_info_container"
        android:layout_marginLeft="24dp"
        />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/student_info_container"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        >

        <RadioButton
            android:id="@+id/Present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />

        <RadioButton
            android:id="@+id/Absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />

        <RadioButton
            android:id="@+id/Tardy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />

        <RadioButton
            android:id="@+id/Excused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />
    </RadioGroup>





</RelativeLayout>